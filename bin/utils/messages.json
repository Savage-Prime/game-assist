        "roll": {
            "description": "Roll dice using flexible expressions with modifiers, exploding dice, and more",
            "parameterDescription": "Dice expression using the notation below",
            "formula": "[count]d[sides][!/!![>threshold]][¬±modifier][kh/kl[count]][tn[target]][(¬±global)][;next_expression][x[repeats]]",
            "helpTitle": "Roll Command - Dice Expression Syntax:",
            "components": [
                {
                    "name": "count",
                    "optional": true,
                    "description": "Number of dice to roll (default: 1)",
                    "examples": [
                        "1",
                        "5"
                    ]
                },
                {
                    "name": "d[sides]",
                    "optional": false,
                    "description": "Die type - number of sides",
                    "examples": [
                        "d4",
                        "d12",
                        "d30"
                    ]
                },
                {
                    "name": "!/!![>threshold]",
                    "optional": true,
                    "description": "Exploding dice - ! explodes once, !! explodes infinitely. Use >N to set custom explode threshold",
                    "examples": [
                        "d6!",
                        "2d8!!",
                        "1d10!>8",
                        "2d6!!>5"
                    ]
                },
                {
                    "name": "¬±modifier",
                    "optional": true,
                    "description": "Local modifier - adds/subtracts from this dice group's result",
                    "examples": [
                        "+3",
                        "-2"
                    ]
                },
                {
                    "name": "kh/kl[count]",
                    "optional": true,
                    "description": "Keep highest (kh) or lowest (kl) dice",
                    "examples": [
                        "kh3",
                        "kl1"
                    ]
                },
                {
                    "name": "tn[target]",
                    "optional": true,
                    "description": "Target number - count successes at or above target",
                    "examples": [
                        "tn4",
                        "tn7"
                    ]
                },
                {
                    "name": "(¬±global)",
                    "optional": true,
                    "description": "Global modifier - adds/subtracts from final total (affects all dice)",
                    "examples": [
                        "(+2)",
                        "(-1)"
                    ]
                },
                {
                    "name": ";next_expression",
                    "optional": true,
                    "description": "Chain multiple dice expressions",
                    "examples": [
                        "1d8;1d6",
                        "2d6;1d4+2"
                    ]
                },
                {
                    "name": "x[repeats]",
                    "optional": true,
                    "description": "Repeat the entire expression multiple times",
                    "examples": [
                        "x2",
                        "x5"
                    ]
                }
            ],
            "examples": [
                {
                    "syntax": "2d8!!>6",
                    "description": "Roll 2d8 that each explode infinitely on 6+ for a combined sum"
                },
                {
                    "syntax": "2d20kh1 (+1) tn15",
                    "description": "Roll 2d20, keep the highest, add 1, and check if it meets or beats 15"
                },
                {
                    "syntax": "1d8!!+1d4!!+5",
                    "description": "Roll 1d8 and 1d4 with infinite exploding dice, and add 5"
                },
                {
                    "syntax": "4d6kh3 x6",
                    "description": "Roll 4d6 and keep the highest 3 results, repeat for 6 results (D&D ability scores)"
                },
                {
                    "syntax": "10d6!! tn5",
                    "description": "Roll 10d6 that each explode infinitely and count successes (results 5 or higher)"
                },
                {
                    "syntax": "1d4;1d6;1d8 (+2)",
                    "description": "Roll multiple dice as separate expressions and add 2 to each result"
                }
            ],
            "quickReference": {
                "basic": "XdY = Roll X dice with Y sides",
                "exploding": "! = Explode once, !! = Explode infinitely, !>N = Custom threshold",
                "modifiers": "+N/-N = Local modifier (per dice group)",
                "global": "(+N)/(-N) = Global modifier (affects final total)",
                "keep": "khN/klN = Keep highest/lowest N dice",
                "target": "tnN = Count successes at target N+",
                "chain": "; = Separate multiple expressions",
                "repeat": "xN = Repeat expression N times"
            }
        },
        "trait": {
            "description": "Roll Savage Worlds trait checks with trait die + wild die",
            "parameterDescription": "Trait expression for Savage Worlds system",
            "formula": "[count]d[trait_die] [wd[wild_die]] [th[threshold]] [([¬±modifier])] [tn[target]]",
            "helpTitle": "Trait Command - Savage Worlds Trait Check Syntax:",
            "components": [
                {
                    "name": "count",
                    "optional": true,
                    "description": "Number of trait dice (usually 1, default: 1)",
                    "examples": [
                        "1",
                        "2"
                    ]
                },
                {
                    "name": "d[trait_die]",
                    "optional": false,
                    "description": "Trait die type (requires: d4, d6, d8, d10, d12)",
                    "examples": [
                        "d4",
                        "d8"
                    ]
                },
                {
                    "name": "wd[wild_die]",
                    "optional": true,
                    "description": "Wild die override (default: d6; requires: d4, d6, d8, d10, d12)",
                    "examples": [
                        "wd8",
                        "wd10"
                    ]
                },
                {
                    "name": "th[count]",
                    "optional": true,
                    "description": "Take highest - keep the highest N dice from all dice rolled (trait + wild)",
                    "examples": [
                        "th1",
                        "th2"
                    ]
                },
                {
                    "name": "([¬±modifier])",
                    "optional": true,
                    "description": "Modifier applied to both dice (in parentheses)",
                    "examples": [
                        "(+1)",
                        "(-2)"
                    ]
                },
                {
                    "name": "tn[target]",
                    "optional": true,
                    "description": "Target number to beat for success (default: 4)",
                    "examples": [
                        "tn3",
                        "tn6"
                    ]
                }
            ],
            "examples": [
                {
                    "syntax": "d8",
                    "description": "Roll d8 trait die with d6 wild die against target number 4"
                },
                {
                    "syntax": "d4-2",
                    "description": "Roll d4 trait + d6 wild with -2 modifier to both against target number 4"
                },
                {
                    "syntax": "d12 wd8 th1 (+1) tn6",
                    "description": "Full notation: d12 trait + d8 wild, take highest 1, +1 modifier, target number 6"
                }
            ],
            "quickReference": {
                "basic": "dX = Trait die + d6 wild die",
                "wildDie": "wdX = Override wild die type",
                "takeHighest": "thX = Take highest X dice from all rolled",
                "modifier": "(+N) = Modifier to both dice",
                "target": "tnN = Target number to beat",
                "aces": "Both dice explode on max roll (Aces rule)"
            }
        }
    },
